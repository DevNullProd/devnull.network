---
pageable: true
per_page: 10
---

<%= partial :nav %>

<div id="blog_content" class="content">
  <div id="blog_subcontent" class="subcontent">
    <div id="blog_header_wrapper">
      <h1 id="blog_header">
        Dev Null Productions
      </h1>
    </div>

    <div style="clear: both"></div>

    <% page_articles.each_with_index do |article, i| %>
      <div class="article">
        <h2><%= link_to article.title, article %></h2>
        <%= article.body %>
      </div>
    <% end %>

    <% if paginate %>
      <div id="page_nav">
      <% if num_pages > 1 %>
        <% if prev_page %>
          <%= link_to "&#9198;", "/" %>
          <%= link_to "&#8884;", prev_page %>
        <% end %>

        [<%= page_number %> / <%= num_pages %>]

        <% if next_page %>
          <%= link_to "&#8885;", next_page %>
          <%= link_to "&#9197;", "/page/#{num_pages}" %>
        <% end %>
      <% end %>
      </div>
    <% end %>
  </div>
</div>

<div style="color: white">
  <%= partial :footer %>
</div>
